<%# This file contains common meta information for all pages. %>
<%# It should be included at the top of the <head> element. %>
<meta charset="UTF-8" />
<meta name="viewport"
      content="width=device-width, initial-scale=1" />
<meta http-equiv="X-UA-Compatible"
      content="IE=edge" />
<link rel="shortcut icon"
      type="image/png"
      href="/favicon.png" />

<link rel="stylesheet"
      type="text/css"
      href="https://use.fontawesome.com/d3d82ead4a.css" />
<%= stylesheet_link_tag :rouge %>
<%= stylesheet_link_tag :all %>

<script type="text/javascript"
        src="https://code.jquery.com/jquery-3.1.1.min.js">
</script>
<script type="text/javascript"
        src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js">
</script>
<script type="text/javascript"
        async
        src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.1/MathJax.js?config=TeX-MML-AM_SVG">
</script>
<%# The MomentJS folks don't have HTTPS, and I can't download raw JS from %>
<%# from GitHub as it's flagged as text/plain, so I have to host it myself. %>
<%# This isn't /ideal/, but I'm not about to have unsecure traffic mixed in. %>
<script type="text/javascript"
        src="/javascripts/moment.min.js">
</script>

<%= javascript_include_tag :cookie %>
<%= javascript_include_tag :query %>
<%= javascript_include_tag :banner %>
<%= javascript_include_tag :nav %>
<%= javascript_include_tag :all %>
