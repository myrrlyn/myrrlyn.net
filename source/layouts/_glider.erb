<svg xmlns="http://www.w3.org/2000/svg"
     id="glider"
     width="<%= scale * 3 %>"
     height="<%= scale * 3 %>">
	<rect class="outer"
	      width="<%= scale * 3 %>"
	      height="<%= scale * 3 %>" />
	<rect class="inner-x"
	      width="<%= scale * 3 %>"
	      height="<%= scale %>"
	      y="<%= scale %>" />
	<rect class="inner-y"
	      width="<%= scale %>"
	      height="<%= scale * 3 %>"
	      x="<%= scale %>" />
	<% 3.times do |y| %>
		<% 3.times do |x| %>
			<circle class="cell x-<%= x %> y-<%= y %>"
			        cx="<%= scale * (x + 0.5) %>"
			        cy="<%= scale * (y + 0.5) %>"
			        r="<%= (scale / 3).round(3) %>" />
		<% end %>
	<% end %>
</svg>
