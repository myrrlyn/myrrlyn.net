<html>
	<head>
		<title>
			<% if !current_page.data.title || current_page.data.title == "Home" %>
~myrrlyn
			<% else %>
myrrlyn/<%= current_page.data.title.downcase %>
			<% end %>
		</title>
		<%= partial "layouts/head" %>

		<%= stylesheet_link_tag :all %>
		<%= stylesheet_link_tag :main %>
		<%= javascript_include_tag :all %>
		<%= javascript_include_tag :main %>
	</head>
	<body class="<%= page_classes %> flex-wrapper flex-rows">
		<%= partial "layouts/header" %>
		<div id="flex-focus"
		     class="flex-wrapper flex-cols">
			<main class="flex-item">
				<article>
					<%= yield %>
				</article>
				<hr />
				<%= partial "layouts/cookie-anchor" %>
			</main>
			<%= partial "layouts/about" %>
			<%= partial "layouts/nav" %>
		</div>
		<%= partial "layouts/footer" %>
	</body>
</html>
