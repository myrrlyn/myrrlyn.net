<html>
	<head>
		<title>
			<% if !current_page.data.title || current_page.data.title == "Blog" %>
Unsolicited Discourse
			<% else %>
<%= current_page.data.title %>
			<% end %>
		</title>
		<link rel="alternate"
		      type="application/rss+xml"
		      href="//myrrlyn.net/blog.rss"
		      title="Unsolicited Discourse" />
		<%= partial "layouts/head" %>
		<%= stylesheet_link_tag :blog %>
		<%= javascript_include_tag :blog %>
	</head>
	<body class="<%= page_classes %> flex-wrapper flex-rows">
		<%= partial "layouts/header" %>
		<div id="flex-focus"
		     class="flex-wrapper flex-cols">
			<main class="flex-item">
				<%= partial "layouts/style-buttons" %>
				<h1 class="title">
					<%= current_page.data.title %>
				</h1>
				<% unless current_page.data.date.nil? %>
					<% date = current_page.data.date %>
					<p class="right">
Published on
						<time datetime="<%= date %>">
							<%suf={1=>"st",2=>"nd",3=>"rd",21=>"st",22=>"nd",23=>"rd",31=>"st"}[date.day]||"th"%>
							<%= date.strftime("%B %d<sup>#{suf}</sup>, %Y") %>
						</time>
					</p>
				<% end %>
				<article>
					<%= yield %>
				</article>
			</main>
			<%= partial "layouts/blog/about" %>
			<%= partial "layouts/blog/nav" %>
		</div>
		<%= partial "layouts/footer" %>
		<%= partial "layouts/katex" %>
	</body>
</html>
